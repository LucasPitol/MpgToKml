<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/fundo"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:textColor="@color/cinza2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
    />

    <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_mpg_complete"
            android:textColor="@color/cinza2"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
    />

    <TextView
            android:id="@+id/text_input"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:padding="10dp"
            android:textColor="@color/cinza2"
            android:textAlignment="center"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
    />


    <ImageView
            android:id="@+id/switch_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/switchverticalorientationarrows"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:textColor="@color/cinza2"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
    />

    <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_kml_complete"
            android:textColor="@color/cinza2"
            android:layout_marginTop="110dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
    />

    <TextView
            android:id="@+id/text_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cinza2"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="150dp"
    />

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_alignParentBottom="true"
            android:columnCount="4"
    >

        <ImageView
                android:id="@+id/seven"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/seven"
        />

        <ImageView
                android:id="@+id/eight"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/eight"
        />

        <ImageView
                android:id="@+id/nine"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/nine"
        />

        <ImageView
                android:id="@+id/c"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/letterc"
        />

        <ImageView
                android:id="@+id/four"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/four"
        />

        <ImageView
                android:id="@+id/five"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/five"
        />

        <ImageView
                android:id="@+id/six"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/six"
        />

        <ImageView
                android:id="@+id/back_space"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/backspace"
        />

        <ImageView
                android:id="@+id/one"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/one"
        />

        <ImageView
                android:id="@+id/two"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/two"
        />

        <ImageView
                android:id="@+id/three"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/three"
        />

        <ImageView
                android:id="@+id/equal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/three"
        />

        <ImageView
                android:id="@+id/empty"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/empty"
        />

        <ImageView
                android:id="@+id/zero"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/zero"
        />

        <ImageView
                android:id="@+id/dot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@drawable/dot"
                android:layout_margin="25dp"
        />

    </GridLayout>

    <!--<Button-->
            <!--android:id="@+id/calculate_btn"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/colorPrimary"-->
            <!--android:layout_marginTop="200dp"-->
            <!--android:text="Calculate"-->
    <!--/>-->


</RelativeLayout>